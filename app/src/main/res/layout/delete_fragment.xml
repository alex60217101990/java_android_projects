<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:expandable="http://schemas.android.com/tools"
    android:scaleType="centerCrop"
    android:id="@+id/del_cont"
    android:orientation="vertical"
    android:background="#FFDAB9"
    android:layout_height="match_parent">


    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:hint="Форма удаления элементов из базы данных:"
            android:textColorHint="#191970"
            android:textSize="18dp"
            android:id="@+id/del_label1"
            android:gravity="center_horizontal"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="15%"
            app:layout_marginRightPercent="15%"
            app:layout_widthPercent="70%" />
       <RelativeLayout
           android:layout_height="wrap_content"
           android:id="@+id/l1"
           android:layout_below="@+id/del_label1"
           android:layout_width="wrap_content"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           >
           <android.support.percent.PercentRelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <TextView
               android:layout_height="wrap_content"
               android:backgroundTint="@null"
               android:hint='Выберите элемент для удаления из списка "Меню":'
               android:textColorHint="#483D8B"
               android:textSize="15dp"
               android:id="@+id/del_label2"
               android:layout_alignParentRight="true"
               android:gravity="center"
               app:layout_marginTopPercent="4%"
               app:layout_marginRightPercent="4%"
               app:layout_widthPercent="40%" />
           <TextView
               android:layout_height="wrap_content"
               android:backgroundTint="@null"
               android:hint='Выберите элемент для удаления из списка "Сотрудники":'
               android:textColorHint="#483D8B"
               android:textSize="15dp"
               android:id="@+id/del_label3"
               android:layout_alignParentLeft="true"
               android:gravity="center"
               app:layout_marginTopPercent="4%"
               app:layout_marginLeftPercent="4%"
               app:layout_widthPercent="40%" />
           </android.support.percent.PercentRelativeLayout>
       </RelativeLayout>
       <RelativeLayout
           android:layout_height="wrap_content"
           android:layout_below="@+id/l1"
           android:id="@+id/l2"
           android:layout_width="wrap_content"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           >
           <android.support.percent.PercentRelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <Spinner
               android:id="@+id/spinner1"
               style="@style/spinner_style"
               android:layout_centerHorizontal="true"
               app:layout_widthPercent="40%"

               android:layout_alignBaseline="@+id/spinner2"
               android:layout_alignParentRight="true"
               android:spinnerMode="dialog"
               app:layout_marginTopPercent="2%"
               app:layout_marginRightPercent="4%"
               android:layout_height="wrap_content">
           </Spinner>
               <Spinner
                   android:id="@+id/spinner2"
                   style="@style/spinner_style1"
                   android:layout_centerHorizontal="true"

                   app:layout_widthPercent="40%"
                   android:layout_alignParentLeft="true"
                   android:spinnerMode="dialog"
                   app:layout_marginTopPercent="2%"
                   app:layout_marginLeftPercent="4%"
                   android:layout_height="wrap_content">
               </Spinner>
               <com.andexert.library.RippleView
                   android:id="@+id/more"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/spinner2"
                   android:layout_width="wrap_content"
                   android:layout_margin="0dp"
                   android:padding="0dp"
                   app:layout_marginTopPercent="2%"
                   android:layout_alignParentRight="true"
                   app:layout_marginRightPercent="14%"
                   app:rv_color="#00FFFF"
                   app:rv_alpha="255">
               <Button android:theme="@style/MyButton"
                   android:textColor="#E0FFFF"
                   android:text="Delete"
                   android:id="@+id/del_button2"
                   android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                   android:layout_centerInParent="true"
                   android:enabled="true" />
               </com.andexert.library.RippleView>
               <com.andexert.library.RippleView
                   android:id="@+id/more1"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/spinner2"
                   android:layout_width="wrap_content"
                   app:layout_marginTopPercent="2%"
                   android:layout_alignParentLeft="true"
                   app:layout_marginLeftPercent="14%"
                   app:rv_color="#00FFFF"
                   app:rv_alpha="255">
                       <Button android:theme="@style/MyButton"
                           android:textColor="#E0FFFF"
                           android:text="Delete"
                           android:id="@+id/del_button3"
                           android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_centerInParent="true"
                           android:enabled="true" />
               </com.andexert.library.RippleView>
           </android.support.percent.PercentRelativeLayout>
       </RelativeLayout>
       <RelativeLayout
           android:layout_height="wrap_content"
           android:layout_below="@+id/l2"
           android:id="@+id/l3"
           android:layout_width="wrap_content"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           >
           <android.support.percent.PercentRelativeLayout
               android:layout_width="wrap_content"
               android:id="@+id/l5"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_height="wrap_content"
                   android:backgroundTint="@null"
                   android:hint='Удалить все данные из таблицы "Меню":'
                   android:textColorHint="#483D8B"
                   android:textSize="15dp"
                   android:id="@+id/del_label4"
                   android:layout_alignParentRight="true"
                   android:gravity="center"
                   app:layout_marginTopPercent="4%"
                   app:layout_marginRightPercent="4%"
                   app:layout_widthPercent="40%" />
               <TextView
                   android:layout_height="wrap_content"
                   android:backgroundTint="@null"
                   android:hint='Удалить все данные из таблицы "Сотрудники":'
                   android:textColorHint="#483D8B"
                   android:textSize="15dp"
                   android:id="@+id/del_label5"
                   android:layout_alignParentLeft="true"
                   android:gravity="center"
                   app:layout_marginTopPercent="4%"
                   app:layout_marginLeftPercent="4%"
                   app:layout_widthPercent="40%" />
           </android.support.percent.PercentRelativeLayout>
       </RelativeLayout>
       <RelativeLayout
           android:layout_height="wrap_content"
           android:layout_below="@+id/l3"
           android:layout_width="wrap_content"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           >
           <android.support.percent.PercentRelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <com.andexert.library.RippleView
                   android:id="@+id/more3"
                   android:layout_height="wrap_content"

                   android:layout_width="wrap_content"
                   android:layout_margin="10dp"
                   app:layout_marginTopPercent="3%"
                   app:rv_centered="true"
                   app:rv_zoom="true"
                   app:rv_rippleDuration="350"
                   app:rv_alpha="170"
                   android:layout_alignParentRight="true"
                   app:layout_marginRightPercent="18%"
                   app:rv_color="#00FFFF"
                   app:rv_type="doubleRipple">
               <at.markushi.ui.CircleButton
                   android:src="@drawable/delete"
                   android:id="@+id/alpha1"
                   app:cb_color="@null"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:layout_marginTopPercent="2.5%"
                   app:cb_pressedRingWidth="100dip" />
                </com.andexert.library.RippleView>
               <com.andexert.library.RippleView
                   android:id="@+id/more4"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_margin="10dp"
                   app:layout_marginTopPercent="3%"
                   app:rv_centered="true"
                   app:rv_zoom="true"
                   app:rv_rippleDuration="350"
                   app:rv_alpha="100"
                   android:layout_alignParentLeft="true"
                   app:layout_marginLeftPercent="18%"
                   app:rv_color="#00FFFF"
                   app:rv_type="doubleRipple">
               <at.markushi.ui.CircleButton
                   android:src="@drawable/delete"
                   app:cb_color="@null"
                   android:id="@+id/alpha2"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cb_pressedRingWidth="100dip" />
                </com.andexert.library.RippleView>
            </android.support.percent.PercentRelativeLayout>

       </RelativeLayout>
 </android.support.percent.PercentRelativeLayout>

</RelativeLayout>
